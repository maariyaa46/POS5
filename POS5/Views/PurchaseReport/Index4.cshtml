@model  POS5.viewModels.ReportVM
@{
    ViewBag.Title = "Index";
    Layout = null;
    

}
<style>
    body {
        margin-top: 20px;
        background-color: #f7f7ff;
    }

    #invoice {
        padding: 0px;
    }

    .invoice {
        position: relative;
        background-color: #FFF;
        min-height: 680px;
        padding: 15px
    }

        .invoice header {
            padding: 10px 0;
            margin-bottom: -7px;
        }

        .invoice .company-details {
            text-align: right
        }

            .invoice .company-details .name {
                margin-top: 0;
                margin-bottom: 0
            }

        .invoice .contacts {
            margin-bottom: 20px
        }

      
        .invoice .invoice-details {
            text-align: right
        }

            .invoice .invoice-details .invoice-id {
                margin-top: -100px;
                color: #0d6efd
            }

        .invoice main {
            padding-bottom: 50px
        }

            


    #head {
        width: 97%;
        margin-top: 80px;
        margin-left: 5px;
        border-bottom: 1px solid #aaa;
        
        margin-bottom: 0px;
    }
    #sec {
        width: 80%;
        margin-top: 75px;
        
        margin-left: 95px;
        border-bottom: 1px solid #aaa;
        margin-bottom: 0px;
    }

    .body {
        width: 97%;
        margin-top: 150px;
        margin-left: 15px;
        border-bottom: 1px solid #aaa;
        outline: black solid 2px;
        border-spacing: 0;
        margin-bottom: 20px;
    }

    #data {
        margin-top: 100px;
        width: 50%;
        margin-left: 650px
    }

    .table th, tbody {
        border: 1px solid;
    }

    .invoice table td,
    .invoice table th {
        padding: 15px;
        /* border-bottom: 2px solid black*/
    }

    .invoice table tbody {
        border: solid;
        border-width: 1px 0;
    }


    .invoice table th {
        font-weight: 400;
        font-size: 16px;
        background-color: skyblue
    }

    .invoice table td h3 {
        margin: 0;
        font-weight: 400;
        border: 1px solid;
        font-size: 1.2em
    }


    .invoice table .no {
        color: #fff;
        font-size: 1.6em;
    }


    .invoice table tbody tr {
        border: 1px solid;
    }

    .invoice table tfoot td {
        background: 0 0;
        border-bottom: none;
        white-space: nowrap;
        text-align: right;
        padding: 10px 20px;
        font-size: 1.2em;
        border-top: 1px solid #aaa
    }

  


    .invoice footer {
        width: 100%;
        text-align: center;
        color: #777;
        padding: 8px 0
    }


    .invoice {
        font-size: 11px !important;
        overflow: hidden !important
    }

   
    .invoice main .notices {
        padding-left: 6px;
        border-left: 6px solid #0d6efd;
        background: pink;
        padding: 10px;
    }


</style>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div id="invoice">
                <div class="invoice overflow-auto">
                    <div style="min-width: 600px">
                        <header>
                            <div class="row">
                                <div class="col">

                                    <img src="~/Content/dist/img/lol.jpg" width="80" alt="">
                                    
                                </div>
                            </div>
                        </header>
                        <main>
                            <div class="row contacts">
                                <div class="col invoice-to">
                                    <div class="text-gray-light">INVOICE TO:</div>
                                    <h1 class="to"></h1>
                                    <div class="address">Somewhere on Earth</div>
                                    <div class="email">
                                        abc@gmail.com
                                    </div>
                                </div>
                                <div class="col invoice-details">

                                    <h1 class="invoice-id">Purchase Report</h1>

                                </div>
                            </div>




                            @foreach (var lst_Pmaster in Model.Pmasterlist)
                            {
                                <table id="head" border="1" cellspacing="0" cellpadding="0" width="1500" background-color="white">
                                    <thead>

                                        <tr id="color">
                                            <th class="text-align:center"><b>#</b></th>
                                            <th class="text-align:center"><b>Date</b></th>
                                            <th class="text-align:center"><b>Supplier name</b></th>

                                            <th class="text-align:center"><b>Gross total</b></th>
                                            <th class="text-align:center"><b>Discount</b></th>

                                            <th class="text-align:center"><b>Received amount</b></th>
                                            <th class="text-align:center"><b>Net total </b></th>
                                            <th class="text-align:center"><b>Tax</b></th>
                                        </tr>
                                    </thead>

                                    <tr style="height:20px">
                                        <td style="text-align:center">@lst_Pmaster.id</td>
                                        <td style="text-align:center">@lst_Pmaster.date.ToString("dd-MM-yyyy")</td>
                                        <td style="text-align:center">@lst_Pmaster.supplier</td>
                                        <td style="text-align:center">@lst_Pmaster.grosstotal </td>
                                        <td style="text-align:center">@lst_Pmaster.discount </td>
                                        <td style="text-align:center">@lst_Pmaster.receivedamount </td>
                                        <td style="text-align:center">@lst_Pmaster.nettotal</td>
                                        <td style="text-align:center">@lst_Pmaster.tax </td>

                                    </tr>

                                </table>

                                foreach (var lst_PDetail in Model.PDetaillist.Where(m => m.mid == lst_Pmaster.id))
                                {
                                    
                        <table id="sec" border="1" cellspacing="0" cellpadding="0" width="1500" background-color="white">
                            <thead>

                                <tr id="color">
                                    <th class="text-align:center"><b>#</b></th>
                                    <th class="text-align:center"><b>mid</b></th>
                                    <th class="text-align:center"><b>item id</b></th>
                                    <th class="text-align:center"><b>itemname</b></th>
                                    <th class="text-align:center"><b>sale price</b></th>
                                    <th class="text-align:center"><b>quantity</b></th>
                                    <th class="text-align:center"><b>total</b></th>




                                </tr>
                            </thead>
                            <tr>


                                <td style="text-align:center">@lst_PDetail.id</td>
                                <td style="text-align:center">@lst_PDetail.mid</td>
                                <td style="text-align:center">@lst_PDetail.itemid</td>
                                <td style="text-align:center">@lst_PDetail.itemname</td>

                                <td style="text-align:center">@lst_PDetail.saleprice </td>

                                <td style="text-align:center">@lst_PDetail.quantity </td>

                                <td style="text-align:center">@lst_PDetail.total</td>
                               
                               
                            </tr>
                               

                        </table>
                                  }
                               
                            }
                        <div id=" last">

                            @Model.final
                        </div>

                            

                           </main>
                      </div>
                </div>
            </div>
        </div>
    </div>




