@model POS5.viewModels.ItemVM
@{
    ViewBag.Title = "New";
    //   /Layout = "~/Views/_ViewStart.cshtml";
}


@using (Html.BeginForm("Save", "Item", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h3><b>New Item</b></h3>
    <div class="card">

        <div class="d-flex align-items-end flex-column">
            <button type="button" class="btn btn-primary mr-2 mt-2" onclick="window.location='@Url.Action("Index", "Item")'"> View List</button>
        </div>
        <div class="row ">
            <div class="form-group ml-5">
                <b>Category</b>
                @Html.DropDownListFor(m => m.Item.catagoryname, new SelectList(Model.Categorylist, "Name", "Name"), "Select Category", htmlAttributes: new { @class = "" })
            </div>
            <div class="form-group ml-5">
                <b>Brand</b>
                @Html.DropDownListFor(m => m.Item.brandname, new SelectList(Model.Brandlist, "Name", "Name"), "Select Brand", htmlAttributes: new { @class = "" })
            </div>
            </div>
           <div id ="null"class="row">
            <div class="form-group ml-5">
                <b>Item Name</b>
                @Html.TextBoxFor(m => m.Item.name, new { @class = "",id="name", required = "required" })
            </div>
            
            <div class="form-group ml-3">
                <b>Item Price</b>
                @Html.TextBoxFor(m => m.Item.price, new { @class = "", required = "required" })
            </div>

            <div class="form-group ml-3">
                <b>Stock Level</b>
                @Html.TextBoxFor(m => m.Item.stocklevel, new { @class = "", required = "required" })
            </div>
            <div class="form-group ml-3">
                <b>Shelf No</b>
                @Html.TextBoxFor(m => m.Item.shelfno, new { @class = "", required = "required" })
            </div>
            </div>



            <div class="col-sm-3">

            @Html.HiddenFor(m => m.Item.id)
                <button type="submit" class="btn btn-outline-success my-2 "><i class="fas fa-save"></i> Save</button>
             </div>
          
        </div>
            }


