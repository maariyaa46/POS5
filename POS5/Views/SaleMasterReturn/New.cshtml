<script type="text/javascript">
    $(document).ready(function () {
        $("#itemname").change(function () {
            var name = $("#itemname").val();
            if (name.length > 0) {
                const id = $(this).children('option:selected').data('id');
                $("#itemid").val(id);
                const price = $(this).children('option:selected').data('price');
                $("#itemprice").val(price);
            } else {
                $("#itemid").val('');
                $("#itemprice").val('');
            }

        });
    });
</script>






