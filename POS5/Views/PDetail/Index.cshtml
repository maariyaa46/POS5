
@model IEnumerable<POS5.Models.PDetail>
@{
    ViewBag.Title = "Index";
    //    Layout = "~/Views/_ViewStart.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4> <b>Sale Detail</b></h4>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">

            <thead>

                <tr class="table-primary">
                    <th class="th-lg">ID</th>
                    <th class="th-lg">mid</th>
                    <th class="th-lg">item id</th>
                    <th class="th-lg">item name</th>
                    <th class="th-lg">sale price</th>
                    <th class="th-lg">quantity</th>
                    <th class="th-lg">total</th>
                    <th class="th-lg">Action</th>
                </tr>

            </thead>

            <tbody>
                <tr>


                    @if (!Model.Any())
                    {
                    }
                    else
                    {
                        foreach (var lst_PDetail in Model)
                        {
                        <tr>
                            <td>@lst_PDetail.id</td>
                            <td>@lst_PDetail.mid</td>
                            <td>@lst_PDetail.itemid</td>
                            <td>@lst_PDetail.itemname</td>
                            <td>@lst_PDetail.saleprice</td>
                            <td>@lst_PDetail.quantity</td>
                            <td>@lst_PDetail.total</td>

                            <td class="gap-lg-2 d-md-flex justify-content-md-center">

                                <a href="@Url.Action("Edit", new { id = lst_PDetail.id })" <button class="btn btn-outline-success px-2" style='margin-right:16px'><i class="fas fa-edit"aria-hidden="true"></i> </button>

                                 <a href="@Url.Action("Delete", new { id = lst_PDetail.id })" <button class="btn btn-outline-warning px-2"><i class="fa fa-trash"aria-hidden="true"></i></button>
                            </td>
                        </tr>

                    }
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info shiny" onclick="window.location='@Url.Action("New", "PDetail")'"><i class="btn-label glyphicon glyphicon-plus"></i>New</button>
        </div>









