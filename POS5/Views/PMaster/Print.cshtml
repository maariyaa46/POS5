<div class="container">
    <div class="card">
        <div class="card-body">
            <div id="invoice">
                <div class="invoice overflow-auto">
                    <div style="min-width: 600px">
                        <header>
                            <div class="row">
                                <div class="col">

                                    <img src="~/Content/dist/img/lol.jpg" width="80" alt="">
                                    </a>
                                </div>
                            </div>
                        </header>
                        <main>
                            <div class="row contacts">
                                <div class="col invoice-to">
                                    <div class="text-gray-light">INVOICE TO:</div>
                                    <h1 class="to">@PMaster.supplier</h1>
                                    <div class="address">Somewhere on Earth</div>
                                    <div class="email">
                                        abc@gmail.com
                                    </div>
                                </div>
                                <div class="col invoice-details">
                                    <h1 class="invoice-id">PURCHASE INVOICE</h1>
                                    <div class="idd"><b>Invoice #:</b>@PMaster.id</div>
                                    <div class="date"><b>Date of Invoice:</b> @edate.ToString("dd-MM-yyyy")</div>
                                </div>
                            </div>

                            <table id="head" border="1" cellspacing="0" cellpadding="0"  width="1200px" background-color="white">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="text-align:center">item name</th>
                                        <th class="text-align:center">quantity</th>
                                        <th class="text-align:center">price</th>
                                        <th class="text-align:center">total</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model.PDetaillist)
                                    {
                                        sr += 1;
                                        //total += item.nettotal;
                                        <tr style="height:20px" >

                                            <td>@sr</td>
                                            <td style="text-align:center">@item.itemname</td>
                                            <td style="text-align:center">@item.saleprice</td>
                                            <td style="text-align:center">@item.quantity</td>
                                            <td style="text-align:center">@item.total</td>


                                        </tr>
}
                                </tbody>
                            </table>
                            <table id="data">
                                <tfoot>
                                    <tr>

                                        <td colspan="4">Total Amount</td>
                                        <td>@PMaster.grosstotal</td>
                                    </tr>
                                    <tr>

                                        <td colspan="4">Received Amount</td>
                                        <td>@PMaster.receivedamount</td>
                                    </tr>
                                    <tr>

                                        <td colspan="4">Discount</td>
                                        <td>@PMaster.discount</td>
                                    </tr>
                                    <tr>

                                        <td colspan="4">Balanced Amount</td>
                                        <td>@PMaster.balanceamount</td>
                                    </tr>
                                </tfoot>
                            </table>

                        </main>
                        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
                        <div class="text-end">

                            <button id="printButton" class="btn btn-info pull-right" onClick="printpage()"><i class="fa fa-print"></i> Print</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function printpage() {
            document.getElementById('printButton').style.visibility = "hidden";
            window.print();
            location.reload();
        }</script>
