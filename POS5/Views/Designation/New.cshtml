@model POS5.Models.Designation
@{
    ViewBag.Title = "New";
    //   /Layout = "~/Views/_ViewStart.cshtml";
}


@using (Html.BeginForm("Save", "Designation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h3><b>New Designation</b></h3>
    <div class="card">

        <div class="d-flex align-items-end flex-column">
            <button type="button" class="btn btn-primary mr-2 mt-2" onclick="window.location='@Url.Action("Index", "Designation")'"> View List</button>
        </div>
        <div class="row ">
            <div class="col-md-10 mx-5">
                <b> Name</b>
                @Html.TextBoxFor(m => m.name, new { @class = "form-control input-lg", required = "required" })
            </div>
            <div class="col-md-10 mx-5">
                <b>Contact Number</b>
                @Html.TextBoxFor(m => m.contactno, new { @class = "form-control input-lg", required = "required" })
            </div>
            <div class="col-md-10 mx-5">
                <b>Customer</b>
                @Html.RadioButtonFor(m => m.status, "Customer")
                <b>Supplier</b>
                @Html.RadioButtonFor(m => m.status, "Supplier")
            </div>
        </div>
        <div class="col-sm-3 mx-5">
            @Html.HiddenFor(m => m.id)
            <button type="submit" class="btn btn-outline-success my-2 "><i class="fas fa-save"></i> Save</button>
        </div>
    </div>







}








