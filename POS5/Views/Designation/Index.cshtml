@model IEnumerable<POS5.Models.Designation>
@{
    ViewBag.Title = "Index";
    //    Layout = "~/Views/_ViewStart.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4> <b>New Brand</b></h4>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">

            <thead>

                <tr class="table-danger">
                    <th class="th-lg">ID</th>
                    <th class="th-lg">Name</th>
                    <th class="th-lg">Contact Number</th>
                    <th class="th-lg">Status</th>
                    <th class="th-lg">Action</th>
                </tr>

            </thead>

            <tbody>

                <tr>
                    @if (!Model.Any())
                    {
                    }
                    else
                    {
                        foreach (var lst_Designation in Model)
                        {
                        <tr>
                            <td>@lst_Designation.id</td>
                            <td>@lst_Designation.name</td>
                            <td>@lst_Designation.contactno</td>
                            <td>@lst_Designation.status</td>
                            <td class="gap-lg-2 d-md-flex justify-content-md-center">

                                <a href="@Url.Action("Edit", new { id = lst_Designation.id })" <button class="btn btn-outline-success px-2" style='margin-right:16px'><i class="fas fa-edit"aria-hidden="true"></i> </button>

                                 <a href="@Url.Action("Delete", new { id = lst_Designation.id })" <button class="btn btn-outline-warning px-2"><i class="fa fa-trash"aria-hidden="true"></i></button>
                            </td>
                        </tr>

                    }
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info shiny" onclick="window.location='@Url.Action("New", "Designation")'"><i class="btn-label glyphicon glyphicon-plus"></i>New</button>
        </div>






